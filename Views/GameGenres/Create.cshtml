@model TP_WS1.Models.GameGenre

@{
	ViewData["Title"] = "Créer un nouveau genre de jeu";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
	@Html.AntiForgeryToken()

	<div class="form-group">
		<label asp-for="GameGenreId" class="control-label">Identifiant du genre</label>
		<input asp-for="GameGenreId" class="form-control" />
		<span asp-validation-for="GameGenreId" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="FullName" class="control-label">Nom complet</label>
		<input asp-for="FullName" class="form-control" />
		<span asp-validation-for="FullName" class="text-danger"></span>
	</div>

	<!-- On garde IsArchived caché mais on initialise manuellement -->
	<input type="hidden" asp-for="IsArchived" value="false" />

	<div class="form-group">
		<button type="submit" class="btn btn-primary">Créer</button>
		<a asp-action="Index" class="btn btn-secondary">← Retour à la liste</a>
	</div>
</form>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}