@model TP_WS1.Models.Game

@{
	ViewData["Title"] = "Delete";
}

<div class="container py-5">
	<div class="card border-danger shadow-sm">
		<div class="card-header bg-danger text-white">
			<h3 class="mb-0">Confirm Deletion</h3>
		</div>
		<div class="card-body">

			<h5 class="card-title">Are you sure you want to delete this game?</h5>

			<dl class="row mt-4">
				<dt class="col-sm-3 text-muted">Name</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

				<dt class="col-sm-3 text-muted">Online</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.IsOnline)</dd>

				<dt class="col-sm-3 text-muted">Engine</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.GameEngine)</dd>

				<dt class="col-sm-3 text-muted">Archived</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.IsArchived)</dd>

				<dt class="col-sm-3 text-muted">Updated At</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.UpdatedAt)</dd>

				<dt class="col-sm-3 text-muted">Created At</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedAt)</dd>

				<dt class="col-sm-3 text-muted">Genre</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.GameGenre.GameGenreId)</dd>

				<dt class="col-sm-3 text-muted">Owner</dt>
				<dd class="col-sm-9">@Html.DisplayFor(m => m.User.UserName)</dd>
			</dl>

			<form asp-action="Delete" class="mt-4 d-flex">
				<input type="hidden" asp-for="GameId" />
				<button type="submit" class="btn btn-danger me-3">
					<i class="bi bi-trash-fill"></i> Delete
				</button>
				<a asp-action="Index" asp-controller="GameGenres" asp-route-id="@Model.GameId" class="btn btn-outline-secondary">
					<i class="bi bi-arrow-left"></i> Back to List
				</a>
			</form>

		</div>
	</div>
</div>