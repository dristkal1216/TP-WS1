@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.General
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP_WS1</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <script src="https://cdn.tiny.cloud/1/eacir9fhthp355ua9er029aivpbilo7yvjnoousqn6dwllo2/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script>
        tinymce.init({ selector: 'textarea#tiny',
        width:1000})
    </script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
</head>
<body>
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
	<div class="container px-5">
		<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TP-WS1</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
					<partial name="_LoginPartial"/>
				@if(User.IsInRole("Admin")){ 
						<li class="nav-item"><a class="nav-link" asp-area="" asp-controller="AspNetUsers" asp-action="Index">Admin Page</a></li>
				}
			</ul>
		</div>
	</div>
</nav>
<!-- Header-->
<header class="masthead text-center text-white">
	<div class="masthead-content">
		<div class="container px-5">
			<h1 class="masthead-heading mb-0">Best Forum</h1>
			<h2 class="masthead-subheading mb-0">For All Game and Game's Genre</h2>
			<a class="btn btn-primary btn-xl rounded-pill mt-5" href="#scroll">Go see for yourself!! </a>
		</div>
	</div>
	<div class="bg-circle-1 bg-circle"></div>
	<div class="bg-circle-2 bg-circle"></div>
	<div class="bg-circle-3 bg-circle"></div>
	<div class="bg-circle-4 bg-circle"></div>
</header>
<div class="container">
	<main role="main" class="pb-3 mb-3">
		@RenderBody()
	</main>
</div>

<footer class="py-5 bg-black">
	<div class="container px-5">
		<p class="m-0 text-center text-white small">Copyright &copy; Your Website 2023</p></div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
